{
	"slug": "smartlight_hub",
	"name": "SmartLight Hub",
	"version": "0.0.3",
	"url": "https://github.com/adrianjost/SmartLight-Homeassistant-Hub",
	"stage": "stable",
	"description": "Hub to sync cloud state with local SmartLight devices.",
	"arch": ["armhf", "armv7", "aarch64", "amd64", "i386"],
	"startup": "services",
	"boot": "auto",
	"ports": {
		"8000/tcp": 8000,
		"80/tcp": 80
	},
	"ports_description": {
		"8000/tcp": "Webservice",
		"80/tcp": "WebSocket connection to local devices"
	},
	"map": [],
	"options": {
		"email": "Your SmartLight account email",
		"password": "",
		"local_logging": false
	},
	"schema": {
		"email": "email",
		"password": "password",
		"local_logging": "bool"
	}
}
